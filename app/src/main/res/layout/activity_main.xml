<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <Button
            android:id="@+id/btnSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单使用"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="gotoModule"
    />
    <Button
            android:id="@+id/btnMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="复杂使用"
            app:layout_constraintTop_toBottomOf="@+id/btnSimple"
            android:onClick="gotoModule"
    />
    <Button
            android:id="@+id/btnLambda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="兰布达表达式"
            app:layout_constraintTop_toBottomOf="@+id/btnMore"
            android:onClick="gotoModule"
    />
    <Button
            android:id="@+id/btnNetWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit"
            app:layout_constraintTop_toBottomOf="@+id/btnLambda"
            android:onClick="gotoModule"
    />

</android.support.constraint.ConstraintLayout>